<?PHP 

	
	if($_SERVER["REQUEST_METHOD"] == "POST") {
	
		$nome_responsavel = $_SESSION['nome_responsavel'];
		$nascimento_responsavel = $_SESSION['nascimento_responsavel']; 
		$sexo_responsavel = $_SESSION['sexo_responsavel']; 
		$email_responsavel = $_SESSION['email_responsavel']; 
		$telefone_responsavel = $_SESSION['telefone_responsavel']; 
		$cpf_responsavel = $_SESSION['cpf_responsavel']; 
		$estado_civil = $_SESSION['estado_civil_responsavel']; 
		
		
		
		
		$smt = $conn -> prepare(
			'insert into tb_pais(nome_responsavel, telefone_responsavel, email_responsavel, cpf_responsavel, nascimento_responsavel, sexo_responsavel, estado_civil_responsavel) values(?, ?, ?, ?, ?, ?, ?);'
		);
		
		$smt -> bind_param("ssssssss", $nome_responsavel, $telefone_responsavel, $email_responsavel, $cpf_responsavel, $nascimento_responsavel, $sexo_responsavel, $estado_civil);
		
		if($smt -> execute()) {
			header('location: cadastrar_aluno_5.php');
			exit();
		}else{
			echo "❌ Erro ao cadastrar: " . $smt->error;
		}
		
		$smt -> close();
	}
?>